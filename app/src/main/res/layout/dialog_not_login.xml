<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_15mdp"
        android:layout_marginEnd="@dimen/_15mdp"
        android:padding="@dimen/_10mdp"
        android:background="@drawable/react_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login Required"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="@dimen/_12font_mdp"
                android:layout_gravity="center_vertical"/>
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:lottie_loop="true"
                android:visibility="gone"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/notlogin"/>
        </LinearLayout>
        <TextView
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5mdp"
            android:textSize="@dimen/_11font_mdp"
            android:textColor="@color/black"
            android:text="You are not logged in. This feature is required login. Please login to continue :) "
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_gravity="end">
            <LinearLayout
                android:id="@+id/noBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/button_close_background">
                <TextView
                    android:id="@+id/noBtnText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@drawable/text_colour_with_follow_btn"
                    android:textSize="@dimen/_11font_mdp"
                    android:text="No"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/button_follow_background">
                <TextView
                    android:id="@+id/yesBtnText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@drawable/text_colour_with_follow_btn"
                    android:textSize="@dimen/_11font_mdp"
                    android:text="Login"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>